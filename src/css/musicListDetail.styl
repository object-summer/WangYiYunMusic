.music-list-detail
  .m-l-d-wrap
    margin 0 auto
    overflow hidden
  .m-l-detail-info
    padding 47px 30px 40px 39px
    border-right 1px solid $color-bd-gray
    margin-right 271px
    display flex
    flex-direction row
  .m-l-d-info-pic
    width 180px
    height @width
    img
      width 180px
      height @width
      display block
  .m-l-d-info-desc
    margin-left 20px
    .title
      margin-bottom 12px
      display flex
      flex-direction row
      i
        display inline-block
        line-height 54px
        display inline-block
        width 54px
        height 24px
        background url("/static/assets/images/icon.png") no-repeat
        background-position 0 -243px
        justify-content center
        align-items center
      span
        display inline-block
        font-size 20px
        margin-left 10px
        max-width 400px
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
    .creator-info
      height 30px
      display flex
      flex-direction row
      img
        display inline-block
        width 30px
        height $width
      span
        display inline-block
        color $color-font-gray
        justify-content center
        align-self center
        margin-left 10px
    .creator-tag
      padding 10px 0
      span
        display inline-block
        padding 2px 6px
        border 1px solid $color-bd-gray
        margin-left 10px
        color $color-font-gray
        border-radius 4px
    .creator-desc
      color $color-font-gray
      .desc-text
        display inline-block
        margin-left 4px
      .mask
        color #000
  .m-l-d-list
    padding 47px 30px 40px 39px
    border-right 1px solid $color-bd-gray
    margin-right 271px
    display flex
    flex-direction column
    .comment-title
      width 100%
      padding-left 0
.base-music-list-table
  display flex
  flex-direction column
  .base-music-list-header
    display flex
    flex-direction row
  .base-music-list-content
    .base-music-list-table-row
      display flex
      flex-direction row
      >div
        flex 1

