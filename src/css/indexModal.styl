@require 'variable.styl'
.--title
  font-size 24px
  display inline-block
.index-wrap
  .banner
    text-align center
    background $color-bg-dark
    .el-carousel__container
      text-align center
      height 360px
      button.el-carousel__arrow
        background $color-bg-gray
        &:hover
          background $color-bg-dark
        i
          font-size 30px
      img
        display inline-block
        max-width 1080px
        height 100%
$item-wrap-width = 738px
.index-bottom-wrap
  border 1px solid #000
  width 1080px
  margin 0 auto
  display flex
  flex-direction row
  .user-info
    width 300px
    border 1px solid #000
  .recommend,
  .personalized,
  .Programs
    width $item-wrap-width
    flex 1
    position relative
    display flex
    flex-direction column
    padding 20px
    .recommend-wrap
      .recommend-list
        margin-top 10px
      ul
        li
          float left
          padding 10px
          width 169px
          line-height 1.4
          &:nth-of-type(1)
          &:nth-of-type(5)
            padding-left 0
          &:nth-of-type(4)
          &:nth-of-type(8)
            padding-right 0
          .cover
            img
              display block
              width 100%
              height 100%
              vertical-align top
          .desc
            line-height 1.2
            padding 4px 0
            span
              display block
            span:first-child
              font-size 13px
              margin-bottom 4px
            span:last-child
              color $color-font-gray
// title stly
.recommend-title
  border-bottom 2px solid $color-bg-primary
  height 33px
  padding 0 10px 0px 34px
  background url("/static/assets/imagesindex.png") no-repeat
  background-size contain
  background-position -225px -156px
  ul
    display inline-block
    color $color-font-gray
    li
      float left
      padding 0 10px
      &:hover
        text-decoration underline
        color $color-bg-primary
