@require 'variable.styl'
// 所有页面的wrap层
.wrap
  width 1080px
.mint-tabbar
  top 0
.index-wrap
  width 100%
  .banner
    position relative
    width 1080px
    height 400px
    margin 0 auto
    .el-carousel__container
      height 400px
      img
        display block
        height 100%
        width 100
$item-wrap-width = 738px
.index-bottom-wrap
  border 1px solid #000
  width 1080px
  margin 0 auto
  display flex
  flex-direction row
  .user-info
    width 300px
    border 1px solid #000
  .recommend,
  .personalized,
  .Programs
    width $item-wrap-width
    flex 1
    position relative
    display flex
    flex-direction column
    padding 20px
    .recommend-wrap
      .recommend-list
        margin-top 10px
      ul
        li
          float left
          padding 10px
          width 169px
          line-height 1.4
          &:nth-of-type(1)
          &:nth-of-type(5)
            padding-left 0
          &:nth-of-type(4)
          &:nth-of-type(8)
            padding-right 0
          .cover
            img
              display block
              width 100%
              height 100%
              vertical-align top
          .desc
            line-height 1.2
            padding 4px 0
            span
              display block
            span:first-child
              font-size 13px
              margin-bottom 4px
            span:last-child
              color $color-font-gray
// title stly
.recommend-title
  border-bottom 2px solid $color-bg-primary
  height 33px
  padding 0 10px 0px 34px
  background url("/static/assets/imagesindex.png") no-repeat
  background-size contain
  background-position -225px -156px
  ul
    display inline-block
    color $color-font-gray
    li
      float left
      padding 0 10px
      &:hover
        text-decoration underline
        color $color-bg-primary
@media screen and (min-width: 360px)
  .banner
    min-height 10rem

